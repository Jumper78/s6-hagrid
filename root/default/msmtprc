#
# Config file for msmtp (sendmail replacement)
#

# Default account
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Mail account
account        default
host           %%MAILHUB%%
port           %%MAILPORT%%
domain         %%MAILDOMAIN%%
from           %%MAILUSER%%
user           %%MAILUSER%%
password       %%MAILPASS%%

# Logging
syslog         off
logfile        /var/log/msmtp.log
